<van-cell-group>
  <van-field
      value="{{ model.username }}"
      required
      clearable
      label="联系人"
      placeholder="联系人"
    />

    <van-field
      value="{{ model.phone }}"
      required
      clearable
      label="手机号"
      placeholder="手机号"
    />

    <van-field
      value="{{ areaInfo }}"
      required
      clearable
      label="选择地区"
      icon="location-o"
      disabled
      bind:click-icon="selectDistrict"
    />

    <van-field
      value="{{ model.address }}"
      required
      clearable
      label="详细地址"
    />
     <van-field
      value="{{ model.zipcode }}"
      required
      clearable
      label="邮政编码"
      placeholder=""
    />
</van-cell-group>







<view class="dialog-mask " style="z-index:11;visibility:{{addressMenuIsShow ? 'visible': 'hidden'}}" bindtap="hideCitySelected" />
<!--城市三级联动-->
<!--使用动画时不能wx:if="{{city.length>0&&isVisible}}" ，不能hidden=''属性否则无动画效果-->
<view class="picker-view" animation="{{animationAddressMenu}}" style="visibility:{{addressMenuIsShow ? 'visible':'hidden'}};">
  <view style="height:10% ;width:95%;margin-top:10rpx">
    <text catchtap="cityCancel">取消</text>
    <text style="float: right" catchtap="citySure">确定</text>
  </view>
  <!--"可以显示默认的城市，使用后级联选择城市反应很慢就不使用了-->
  <picker-view style="width: 100%; height: 300px;" bindchange="cityChange" value="{{value}}">
    <picker-view-column>
      <view wx:for="{{provinces}}" class="picker-item" wx:key="value" >
        {{item.name}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" class="picker-item" wx:key="value" >
        {{item.name}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{areas}}" class="picker-item" wx:key="value" >
        {{item.name}}</view>
    </picker-view-column>
  </picker-view>
</view>